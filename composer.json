{
    "name": "uniacid/hashid-bundle",
    "type": "symfony-bundle",
    "description": "Modernized Symfony bundle for automatic encoding/decoding of route parameters using Hashids - PHP 8.3 & Symfony 6.4/7.0 ready fork of pgs-soft/hashid-bundle",
    "keywords": ["symfony", "bundle", "hashids", "security", "obfuscation", "url", "routing", "parameter", "php8", "modernized"],
    "license": "MIT",
    "homepage": "https://github.com/uniacid/HashId",
    "authors": [
        {
            "name": "Karol Jonski",
            "email": "kjonski@pgs-soft.com",
            "role": "Original Author"
        },
        {
            "name": "uniacid",
            "homepage": "https://github.com/uniacid",
            "role": "Modernization Lead (v4.0+)"
        }
    ],
    "require": {
        "php": "^8.1",
        "symfony/dependency-injection": "^6.4|^7.0",
        "symfony/config": "^6.4|^7.0",
        "hashids/hashids": "^4.0|^5.0",
        "symfony/routing": "^6.4|^7.0"
    },
    "autoload": {
        "psr-4": { "Pgs\\HashIdBundle\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": {
            "Pgs\\HashIdBundle\\Tests\\": "tests/",
            "Pgs\\HashIdBundle\\Rector\\": "rector-rules/"
        }
    },
    "minimum-stability": "stable",
    "config": {
        "platform": {
            "php": "8.3.0"
        },
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "extra": {
      "branch-alias": {
        "dev-master": "4.0-dev"
      }
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.2",
        "symfony/http-kernel": "^6.4|^7.0",
        "sensio/framework-extra-bundle": "^6.1|^7.0",
        "friendsofphp/php-cs-fixer": "^3.40",
        "phpunit/phpunit": "^10.0",
        "symfony/browser-kit": "^6.4|^7.0",
        "symfony/yaml": "^6.4|^7.0",
        "symfony/phpunit-bridge": "^6.4|^7.0",
        "rector/rector": "^1.0"
    }
}
